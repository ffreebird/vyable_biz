{
  "name": "vyable",
  "private": true,
  "workspaces": ["packages/*", "projects/biz/packages/*"],
  "scripts": {
    "dev:biz": "bun run --cwd projects/biz dev",
    "dev:biz:api": "bun run --cwd projects/biz dev:api",
    "dev:biz:web": "bun run --cwd projects/biz dev:web",
    "build:biz": "bun run --cwd projects/biz build",
    "typecheck": "bun run typecheck:core && bun run --cwd projects/biz typecheck",
    "typecheck:core": "bun run --cwd packages/core typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:biz:generate": "bun run --cwd projects/biz db:generate",
    "db:biz:migrate": "bun run --cwd projects/biz db:migrate",
    "db:biz:studio": "bun run --cwd projects/biz db:studio"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.7.2"
  }
}
