{
  "name": "vyable-biz",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --parallel dev:api dev:web",
    "dev:api": "bun run --cwd packages/api dev",
    "dev:web": "bun run --cwd packages/web dev",
    "build": "bun run --parallel build:shared build:api build:web",
    "build:shared": "bun run --cwd packages/shared build",
    "build:api": "bun run --cwd packages/api build",
    "build:web": "bun run --cwd packages/web build",
    "typecheck": "bun run typecheck:shared && bun run typecheck:api && bun run typecheck:web",
    "typecheck:shared": "bun run --cwd packages/shared typecheck",
    "typecheck:api": "bun run --cwd packages/api typecheck",
    "typecheck:web": "bun run --cwd packages/web typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:generate": "bun run --cwd packages/api db:generate",
    "db:migrate": "bun run --cwd packages/api db:migrate",
    "db:studio": "bun run --cwd packages/api db:studio"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.7.2"
  }
}
